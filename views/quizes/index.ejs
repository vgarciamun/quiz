<!DOCTYPE html>
<html>
  <body>
     <center>
      <table>
  		  <% var i; for (i=0; i < quizes.length; i++) { %>
  		  <tr>
          <td><a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a></td>
          <%if(session.user){%>
          <td><a href="quizes/<%= quizes[i].id %>/edit"><button>Editar</button></a></td>   
          <td>
            <form method="post" action="quizes/<%= quizes[i].id %>?_method=delete">
              <button type="submit" onClick="return confirm('Borrar pregunta: <%= quizes[i].pregunta %>');">
                Borrar
              </button>
            </form>
          </td>
          <%}%>
        </tr>
  		  <% } %>
  	 </table>
    </center>  

    <%if(session.user){%>
      <a href="quizes/new"><button>Crear pregunta</button></a>
    <%}%>
    <form method = "get" action="/quizes">
      Buscar pregunta:
      <input type="text" name="search" value="Introduzca el texto de la pregunta a buscar"/>
      <input type="submit" value="Buscar">
    </form>
  </body>
</html>
